<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', { title: `Editando: ${productToEdit.name}` }) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productToEdit.name %> </i></h2>
			</div>
		</div>
		<div class="col-12">
		


			<form action="/products/edit/<%= productToEdit.id %>?_method=PUT"  method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name"
							class="form-input"
							value="<%= locals.oldData ? oldData.name : productToEdit.name %>"
						>
						<% if (locals.errors && errors.name) { %>
							<div class="errorValidacion">
								<p><%= errors.name.msg %></p>
							</div> 
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="number" id="price" name="price" 
							class="form-input"
							value="<%= locals.oldData ? oldData.price : parseInt(productToEdit.price) %>"
						>
						<% if (locals.errors && errors.price) { %>
							<div class="errorValidacion">
								<p><%= errors.price.msg %></p>
							</div> 
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input  type="number" id="discount" name="discount"  
							class="form-input"
							value="<%= locals.oldData ? oldData.discount : parseInt(productToEdit.discount) %>"
						>
						<% if (locals.errors && errors.discount) { %>
							<div class="errorValidacion">
								<p><%= errors.discount.msg %></p>
							</div> 
						<% } %>
					</div>

					<div class="col-12 col-md-6">
						<label for="image" class="form-label">Foto:</label>
						<input type="file" id="image" name="image" 
							placeholder="Ingrese una foto"   
							class="form-input" accept=".png, .jpeg, .jpg"
							multiple
						>
						<% if (locals.errors && errors.image) { %>
							<div class="errorValidacion">
								<p><%= errors.image.msg %></p>
							</div> 
						<% } %>
					</div>
					
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<% if (locals.oldData && oldData.category) { %>
								<option value="in-sale" 
									<%= oldData.category == "in-sale" ? "selected" : "" %> 
								> 
									En oferta
								</option>
								<option 
									value="visited" 
									<%= oldData.category == "visited" ? "selected" : "" %> 
								>
									Últimos visitados
								</option>	
							<% } else { %>
								<option value="in-sale" 
									<%= productToEdit.category == "in-sale" ? "selected" : "" %> 
								> 
									En oferta
								</option>
								<option 
									value="visited" 
									<%= productToEdit.category == "visited" ? "selected" : "" %> 
								>
									Últimos visitados
								</option>							 
							<% } %>
						</select>
						<% if (locals.errors && errors.category) { %>
							<div class="errorValidacion">
								<p><%= errors.category.msg %></p>
							</div> 
						<% } %>
					</div>
					
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" class="form-input" value=""><%= locals.oldData ? oldData.description : productToEdit.description %></textarea>
						<% if (locals.errors && errors.description) { %>
							<div class="errorValidacion">
								<p><%= errors.description.msg %></p>
							</div> 
						<% } %>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>